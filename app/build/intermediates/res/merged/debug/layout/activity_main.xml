<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.janek.maze.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maze_game"
        android:fontFamily="sans-serif"
        android:textSize="40sp"
        android:layout_marginTop="26dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/bt_new"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="startGame"
        android:layout_marginTop="50sp"
        android:text="@string/new_game" />

    <Button
        android:id="@+id/bt_stats"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:onClick="showStats"
        android:layout_marginTop="50dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/bt_new"
        android:text="@string/leaderboard" />

    <Button
        android:id="@+id/bt_quit"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/bt_new"
        android:layout_below="@+id/bt_stats"
        android:onClick="quitApp"
        android:layout_marginTop="50dp"
        android:text="@string/exit" />

</RelativeLayout>
